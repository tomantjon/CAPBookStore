<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout" controllerName="bookapp.controller.List" displayBlock="true">
    <Page id="page" title="{i18n>title}">
        <VBox width="100%" direction="Column" id="vbox0">
            <items>
                <Button xmlns="sap.m" text="Create Order" id="btnOrder" press="handleListItemPress"/>
                <Table xmlns="sap.m" id="table" headerText="Books" items="{/Books}" >
            <columns>
                <Column id="column1">
                    <header>
                        <Text id="header1" text="Title"/>
                    </header>
                </Column>
    
            </columns>
            <ColumnListItem id="columnlistitem" vAlign="Middle" type="Navigation" >
                <Text id="title" text="{title}"/>
                
            </ColumnListItem>
        </Table>
            </items>
        </VBox>
    <content/>
    </Page>
</mvc:View>